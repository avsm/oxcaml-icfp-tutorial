{
    "name": "OCaml Dev Container (Build from Scratch)",
    "build": {
        "dockerfile": "../.devcontainer/dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ocamllabs.ocaml-platform"
            ]
        }
    },
    "postCreateCommand": "opam switch 5.2.0+ox && eval $(opam env)",
    "remoteUser": "opam"
}
