{
    "name": "OCaml Dev Container",
    "image": "kayceesrk/oxcaml-icfp-tutorial:latest",
    // Uncomment to build locally instead of pulling from Docker Hub:
    // "build": {
    //     "dockerfile": "dockerfile",
    //     "context": ".."
    // },
    "customizations": {
        "vscode": {
            "extensions": [
                "ocamllabs.ocaml-platform"
            ]
        }
    },
    "postCreateCommand": "opam switch 5.2.0+ox && eval $(opam env)",
    "remoteUser": "opam"
}